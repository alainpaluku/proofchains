{
  "name": "proofchain",
  "version": "1.0.0",
  "private": true,
  "description": "Cardano blockchain-based academic verification platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "verifier:dev": "npm run dev --workspace=apps/verifier",
    "issuer:dev": "npm run dev --workspace=apps/issuer",
    "admin:dev": "npm run dev --workspace=apps/admin",
    "landing:dev": "npm run dev --workspace=apps/landing",
    "api:dev": "npm run dev --workspace=api/hono-api",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -Production",
    "deploy:landing": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App landing",
    "deploy:issuer": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App issuer",
    "deploy:verifier": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App verifier",
    "deploy:admin": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App admin",
    "deploy:landing:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App landing -Production",
    "deploy:issuer:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App issuer -Production",
    "deploy:verifier:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App verifier -Production",
    "deploy:admin:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -App admin -Production"
  },
  "devDependencies": {
    "buffer": "6.0.3",
    "turbo": "1.10.16",
    "typescript": "5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
